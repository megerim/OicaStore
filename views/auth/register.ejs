<!-- views/auth/register.ejs -->
<%- include('../partials/header') %>

<h1 class="text-3xl font-bold mb-6">Register</h1>

<% if (errors && errors.length > 0) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
      <ul>
        <% errors.forEach(function (error) { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>

<form action="/register" method="POST">
  <!-- CSRF Token -->
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <!-- Form Fields -->
  <div class="mb-4">
    <label for="name" class="block text-gray-700">Name:</label>
    <input type="text" name="name" value="<%= name %>" required class="w-full border rounded px-2 py-1">
  </div>
  <div class="mb-4">
    <label for="email" class="block text-gray-700">Email:</label>
    <input type="email" name="email" value="<%= email %>" required class="w-full border rounded px-2 py-1">
  </div>
  <div class="mb-4">
    <label for="password" class="block text-gray-700">Password:</label>
    <input type="password" name="password" required class="w-full border rounded px-2 py-1">
  </div>
  <div class="mb-4">
    <label for="password2" class="block text-gray-700">Confirm Password:</label>
    <input type="password" name="password2" required class="w-full border rounded px-2 py-1">
  </div>
  <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Register</button>
</form>

<p class="mt-4">Already have an account? <a href="/login" class="text-blue-500">Login here</a></p>

<%- include('../partials/footer') %>